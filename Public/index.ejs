<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Semesters</title>
    <!-- Add Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container">

    <h1 class="mt-5 mb-4">Course Semesters</h1>
    
    <% for (let thisSem of Object.keys(sems)) { %>
        <div class="card mb-4">
            <div class="card-header">
                <h2><%= thisSem %></h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Lectures Column -->
                    <% if (sems[thisSem].Lectures && sems[thisSem].Lectures.length > 0) { %>
                        <div class="col">
                            <h5 class="card-title">Lectures</h5>
                            <ul class="list-group">
                                <% for (let i of Object.keys(sems[thisSem].Lectures)) { %>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-8">
                                                <%= sems[thisSem].Lectures[i].name %>
                                            </div>
                                            <div class="col-4 text-end">
                                                Credits: <%= sems[thisSem].Lectures[i].credit %>
                                            </div>
                                        </div>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    <% } %>

                    <!-- Labs Column -->
                    <% if (sems[thisSem].Labs && sems[thisSem].Labs.length > 0) { %>
                        <div class="col">
                            <h5 class="card-title">Labs</h5>
                            <ul class="list-group">
                                <% for (let i of Object.keys(sems[thisSem].Labs)) { %>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-8">
                                                <%= sems[thisSem].Labs[i].name %>
                                            </div>
                                            <div class="col-4 text-end">
                                                Credits: <%= sems[thisSem].Labs[i].credit %>
                                            </div>
                                        </div>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    <% } %>

                    <!-- Project Column -->
                    <% if (sems[thisSem].Project && sems[thisSem].Project.length > 0) { %>
                        <div class="col">
                            <h5 class="card-title">Project</h5>
                            <ul class="list-group">
                                <% for (let i of Object.keys(sems[thisSem].Project)) { %>
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-8">
                                                <%= sems[thisSem].Project[i].name %>
                                            </div>
                                            <div class="col-4 text-end">
                                                Credits: <%= sems[thisSem].Project[i].credit %>
                                            </div>
                                        </div>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
